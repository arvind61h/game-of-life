pipeline{
    agent {lable "buildServer"}
    tools{
        maven 'Maven'
    }
    stages{
        stage("SCM-CHECKOUT"){
            steps{
                git 'https://github.com/arvind61h/game-of-life.git'
            }
        }
        stage("Build-Artifcts"){
            steps{
                sh 'mvn clean package'
            }
            post{
                success{
                    echo "Archiving Artifacts"
                    archiveArtifacts artifacts: '**/*.jar, **/*.war', followSymlinks: false
                }
            }
        }
    }
}